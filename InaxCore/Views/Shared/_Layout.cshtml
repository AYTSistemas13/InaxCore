  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
  <script>
    $(document).ready(function () {
      $("#sidebar").mCustomScrollbar({
        theme: "minimal"
      });
      $('[data-toggle="tooltip"]').tooltip();
      $('#sidebarCollapse2').on('click', function () {
        // open or close navbar
        console.log('dentro perro');
        $('#sidebar').toggleClass('active');
        // close dropdowns
        $('.collapse.in').toggleClass('in');
        $(this).hide();
        if ($('#sidebar').hasClass('active')) {
          console.log('notiene');
          $('#main-content').removeClass('col-lg-11');
          $('#main-content').addClass('col-lg-12');
          $('#side-content').removeClass('col-lg-1');
          $('#side-content').addClass('col-lg-0');
          $('#sidebarCollapse3').show();
        } else {
          console.log('sitiene');
          $('#main-content').removeClass('col-lg-12');
