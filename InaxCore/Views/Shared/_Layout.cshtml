  <link href="https://cdn.jsdelivr.net/gh/gitbrent/bootstrap4-toggle@3.6.1/css/bootstrap4-toggle.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
</head>
<body>
  <div class="container-fluid">
    <div id="main-content" class="col-lg-12 m-0 col-md-12 p-0">
      <div class="content">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white fixed-top  border-bottom box-shadow mb-3">
          <div class="container-fluid">
            <a class="navbar-brand pl-3" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/img/avance-logo-wname.jpg" style="max-height:35px;" /></a>
            <button class="navbar-toggler" id="sidebarCollapse" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
              <partial name="_LoginPartial" />
              <ul class="navbar-nav flex-grow-1">
                @*<li class="nav-item text-center fast-Link">
                      <a class="nav-link text-dark" asp-area="" asp-controller="CreateSale" asp-action="Index"><i class="fa fa-shopping-cart"></i></a>
                  </li>
                  <li class="nav-item text-center mr-2 fast-Link ">
                      <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index"><i class="fa fa-users"></i></a>
                  </li>
                  <li class="nav-item text-center mr-2 fast-Link">
                      <a class="nav-link text-dark" asp-area="" asp-controller="SalesOrder" asp-action="Index"><i class="fa fa-file-invoice-dollar"></i></a>
                  </li>
                  <li class="nav-item text-center mr-2 fast-Link">
                      <a class="nav-link text-dark" asp-area="" asp-controller="QuotationsInfo" asp-action="Index"><i class="fa fa-book"></i></a>
                  </li>*@
                <li class="nav-item text-center mr-2 fast-Link">
                  <a class="nav-link text-dark" asp-area="" asp-controller="PromoCodes" asp-action="Index" title="Códigos Promocionales"><i class="fa fa-percentage"></i></a>
                </li>
                <li class="nav-item text-center mr-2 fast-Link">
                  <a class="nav-link text-dark" asp-area="" asp-controller="CreditRequests" asp-action="Index" title="Credito/Transferencias"><i class="fa fa-credit-card"></i></a>
                </li>
                <li class="nav-item text-center mr-2 fast-Link">
                  <a class="nav-link text-dark" asp-area="" asp-controller="Lotes" asp-action="viewLote" title="Caducidades Tintas"><i class="fa fa-tags"></i></a>
                </li>
                <li class="nav-item text-center mr-2 fast-Link">
                  <a class="nav-link text-dark" asp-area="" asp-controller="AdminHV" asp-action="Index" title="Administrador de Herramienta de Ventas"><i class="fa fa-toggle-off"></i></a>
                </li>
              </ul>
            </div>
          </div>
        </nav>
        <main role="main" class="pb-3">
          @RenderBody()
        </main>
      </div>
    </div>
  </div>




  <footer class="border-top footer text-muted">
    <div class="container">
      &copy; 2020 - InaxCore - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
  </footer>
  <script src="~/lib/jquery/dist/jquery.min.js"></script>
  <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
  <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
  <script src="~/js/site.js" asp-append-version="true"></script>
  <script src="~/js/AdminHV.js" asp-append-version="true"></script>
  <script src="~/js/dropzone.min.js" asp-append-version="true"></script>
  <script src="~/js/jquery.multi-select.js" asp-append-version="true"></script>
  <script src="~/js/jquery.quicksearch.js" asp-append-version="true"></script>
  <script src="~/js/tokenize2.min.js" asp-append-version="true"></script>
